<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HorizontalPanel ui:field="container">
        <g:Label ui:field="usernameLabel" text="Username"/>
        <g:TextBox ui:field="usernameField"/>
        <g:Label ui:field="passwordLabel" text="Password"/>
        <g:PasswordTextBox ui:field="passwordField"/>
        <g:Button ui:field="loginButton" text="Login"/>
    </g:HorizontalPanel>
</ui:UiBinder>